#header
  font-size: 14px
  position: relative
  border-bottom: 1px solid color-border
  &.mobile-on
    #main-nav,
    #sub-nav
      display: block

#header-outer
  height: 100%
  position: relative

#header-inner
  position: relative
  overflow: hidden

#main-nav
  float: left
  margin-left: -15px

$nav-link
  float: left
  color: black
  text-decoration: none
  transition: opacity 0.2s
  display: block
  padding: 15px

.main-nav-link
  @extend $nav-link
  font-weight: 600
  @media mq-mobile
    padding: 10px 15px
    float: none

.logo-text,
.main-nav-link
  .fa
    display: inline-block
    width: 70px
    text-align: center
    @media mq-mobile
      display: inline
    > .nav-text
      display: block
      padding 5px 0
      white-space: nowrap
      font-size: 0.7em
      opacity: 0
      transition: opacity 0.5s ease-out
      @media mq-mobile
        display: inline-block
        padding 0
        margin-left: 15px
        opacity: 1
  &:hover
    .fa > .nav-text
        opacity: 1

.logo-text
  .fa
    > .nav-text
      @media mq-mobile
        opacity: 0

#main-nav-toggle
  @extend $nav-link
  display: none
  font-size: 16px
  margin-left: -15px
  font-family: font-icon
  &:before
    content: "\f0c9"
  @media mq-mobile
    display: block

#logo
  float:left
  @media mq-mobile
    float: none
    margin: 0 auto
    display: block
    background-position: center

#sub-nav
  float: right

#main-nav,
#sub-nav
  @media mq-mobile
    display: none
    float: none

#search-form-wrap
  top: 15px
  padding: 15px 0
  @media mq-mobile
    text-align: left

.search-form
  padding 5px
  border: 1px dotted darken(color-border, 10%)
  border-radius(15px)
  clearfix()
  @media mq-mobile
    display: inline-block

.search-form-input
  width: 150px
  border: none
  float: left
  font-size: 14px
  background: none
  color: color-default
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none
  @media mq-mobile
    width: 250px

.search-form-submit
  @extend $nav-link
  float: left
  padding: 0
  font-family: font-icon
  border: none
  background: none
  cursor: pointer